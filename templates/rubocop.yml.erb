require:
  - rubocop-performance
  - rubocop-rails
  - rubocop-rspec

AllCops:
  TargetRubyVersion: <%= RUBY_VERSION %>
  DisplayCopNames: true
  SuggestExtensions: false
  Exclude:
    - bin/*
    - vendor/ruby/**/*
    - node_modules/**/*
    - db/schema.rb
    - .licenses/**/*
Rails:
  Enabled: true
Rails/UnknownEnv:
  Environments:
    - production
    - staging
    - development
    - test
Metrics:
  Exclude:
    - db/migrate/*
    - Rakefile
    - Gemfile
    - config/**/*
    - spec/**/*
    - lib/tasks/**/*
Metrics/BlockLength:
  Exclude:
    - config/environments/*
    - lib/tasks/**/*
    - spec/**/*
Style/Documentation:
  Enabled: false
